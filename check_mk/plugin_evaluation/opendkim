# Example output from agent:
# <<<opendkim>>>
# opendkim-testkey: key secure

def inventory_opendkim(info):
   if info:
        return [ (None, None) ]

def check_opendkim(item, _no_params, info):
   infotext = ''

   for line in info:
        # if testkey command output match 
        if (' '.join(line) == "opendkim-testkey: key secure"):
                infotext = "DKIM key is secure."
                state = 0
        else:
                infotext = "DKIM key is not secure. Check the DKIM configuration on Mailserver and Nameserver."
                state = 1
   return state, infotext


check_info["opendkim"] = {
    'check_function'      : check_opendkim,
    'inventory_function'  : inventory_opendkim,
    'service_description' : 'OpenDKIM Keytest',
}

